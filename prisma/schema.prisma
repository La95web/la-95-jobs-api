generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserDrivers {
  id    Int     @default(autoincrement()) @id
  name  String?
  lastName String?
  phone String?
  email String  @unique
  createdAt DateTime @default(now())
}

model UserDispatch {
  id    Int     @default(autoincrement()) @id
  name  String?
  lastName String?
  phone String?
  email String  @unique
  createdAt DateTime @default(now())
}

model UserOperator {
  id    Int     @default(autoincrement()) @id
  name  String?
  lastName String?
  phone String?
  email String  @unique
  createdAt DateTime @default(now())
}

model UserRealState {
  id    Int     @default(autoincrement()) @id
  name  String?
  lastName String?
  phone String?
  email String  @unique
  createdAt DateTime @default(now())
}

model UserOther {
  id    Int     @default(autoincrement()) @id
  name  String?
  lastName String?
  phone String?
  email String  @unique
  createdAt DateTime @default(now())
}

model TruckBuyer {
  id    Int     @default(autoincrement()) @id
  name  String?
  lastName String?
  phone String?
  email String  @unique
  createdAt DateTime @default(now())
}

model Comment {
  id      Int      @id @default(autoincrement())
  name    String
  email   String
  content String
  createdAt DateTime @default(now())
  likes     Int      @default(0)
  hearts    Int      @default(0)
  fires     Int      @default(0)
}